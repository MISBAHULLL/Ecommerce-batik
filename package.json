{
  "name": "batik-indonesia-ecommerce",
  "version": "1.0.0",
  "description": "Modern e-commerce website for Indonesian batik with responsive design and cultural content",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=/index.html",
    "dev": "live-server --port=3000 --open=/index.html --watch=css,js",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o css/style.min.css css/style.css",
    "minify-js": "uglifyjs js/*.js -o js/bundle.min.js",
    "validate-html": "html-validate *.html",
    "lint-css": "stylelint css/*.css",
    "lint-js": "eslint js/*.js",
    "test": "npm run validate-html && npm run lint-css && npm run lint-js",
    "deploy": "gh-pages -d .",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html"
  },
  "keywords": [
    "batik",
    "indonesia",
    "ecommerce",
    "cultural-heritage",
    "responsive-design",
    "bootstrap",
    "javascript",
    "html5",
    "css3"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/your-username"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/batik-ecommerce.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/batik-ecommerce/issues"
  },
  "homepage": "https://your-username.github.io/batik-ecommerce",
  "devDependencies": {
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "html-validate": "^8.7.4",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "eslint": "^8.54.0",
    "gh-pages": "^6.1.0",
    "lighthouse": "^11.3.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}